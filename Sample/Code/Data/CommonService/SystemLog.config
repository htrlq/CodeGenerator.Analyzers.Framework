<?xml version="1.0" encoding="utf-8"?>
<SQLConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<SQLList>
		<!-- 插入系统Log（异常log等) -->
		<SQL SQLKey="CommonService_CreateSystemEventLog" ConnectionKey="MainWrite">
			<Text>
				<![CDATA[
         INSERT  INTO system_event_log
                ( LogID ,
                  Source ,
                  Category ,
                  RequestUrl ,
                  ServerName ,
                  ServerIP ,
                  ReferenceKey ,
                  UserHostName ,
                  UserHostAddress ,
                  Content ,
                  ProcessID ,
                  ProcessName ,
                  ThreadID ,
                  Environment ,
                  LogContentHashCode ,
                  TodayDuplicateCount ,
                  LastExceptionTime
                )
        VALUES  ( @LogID ,
                  @Source ,
                  @Category ,
                  @RequestUrl ,
                  @ServerName ,
                  @ServerIP ,
                  @ReferenceKey ,
                  @UserHostName ,
                  @UserHostAddress ,
                  @Content ,
                  @ProcessID ,
                  @ProcessName ,
                  @ThreadID ,
                  @Environment ,
                  @LogContentHashCode ,
                  1 ,
                  @LastExceptionTime
                )
		          ]]>
			</Text>
		</SQL>

		<!-- 分页查询系统日志信息 -->
		<SQL SQLKey="CommonService_QuerySytemEventLogList" ConnectionKey="MainRead">
			<Text>
				<![CDATA[
	          SELECT SysNo 
	                  ,LogID
	                  ,Source
	                  ,Category
	                  ,RequestUrl
	                  ,ServerName
	                  ,ServerIP
	                  ,ReferenceKey
	                  ,UserHostName
	                  ,UserHostAddress
	                  ,Content
	                  ,ProcessID
	                  ,ProcessName
	                  ,ThreadID
	                  ,InDate
	                  ,Environment
	                  ,TodayDuplicateCount
	                  ,LastExceptionTime
	          FROM  system_event_log
						ORDER BY
	                SysNo DESC
            ]]>
			</Text>
		</SQL>

		<!-- 通过日志ID获取系统日志详细 -->
		<SQL SQLKey="CommonService_GetSytemEventLogContent" ConnectionKey="MainRead">
			<Text>
				<![CDATA[
             SELECT * FROM system_event_log WHERE LogID = @LogID
         ]]>
			</Text>
		</SQL>
	</SQLList>
</SQLConfig>